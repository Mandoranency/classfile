using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Data;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace project1
{
      class sy
    {
        public static SqlConnection cn = new SqlConnection("Data Source=(LocalDB)\\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\\LOGINDATA.mdf;Integrated Security=True");
        private static int rp, id, tr;

        public static String login(String tblnm, String param)
        {
            String Sql = "SELECT * FROM " + tblnm + " WHERE " + param;
            SqlDataAdapter da = new SqlDataAdapter(Sql, cn);
            DataTable dt = new DataTable();
            da.Fill(dt);
            if (dt.Rows.Count == 1)
            {
                String active = dt.Rows[0][3].ToString();
                if (active == "y")
                {
                    return "1";
                }
                else
                {
                    return "2";
                }
            }
            else
            {
                return "3";
            }
        }

        public static DataTable Crud(string qtype,string tblnm,string param=null)
        {
            DataTable dt = new DataTable();
            SqlDataAdapter da;
            if (qtype == "Insert")
            {
                string sql = "INSERT INTO " + tblnm + " (student_name,moblie_no) VALUES ('" + param + "')";
                da = new SqlDataAdapter(sql, cn);
                da.Fill(dt);
                return dt;
            }
            if (qtype == "select")
            {
                string Sql = "select * from " + tblnm;
                da = new SqlDataAdapter(Sql, cn);
                da.Fill(dt);
                return dt;
            }
            return dt;
        }

        public static DataTable cruds(string qtype, string tblnm, string param1 = null, string param2 = null, int student_id = 0)
        {
            DataTable dt = new DataTable();
            SqlDataAdapter da;
            if (qtype == "Update")
            {
                string sql = "UPDATE " + tblnm + "' SET student_name = '" + param1 + "' mobile_no = '" + param2 + "' WHERE student_id = '" + student_id;
                da = new SqlDataAdapter(sql, cn);
                da.Fill(dt);
                return dt;
            }
            if (qtype == "select")
            {
                string Sql = "select * from " + tblnm;
                da = new SqlDataAdapter(Sql, cn);
                da.Fill(dt);
                return dt;
            }
            return dt;
        }

        public class datanavigate
        {
            private int rp, tr, id;
            private DataTable dt;
            private SqlConnection cn;
            public string Name { get; private set; }
            public string Number { get; private set; }

            public datanavigate(string connectionString)
            {
                cn = new SqlConnection(connectionString);
                LoadData();
            }

            public void LoadData()
            {
                string sql = "SELECT * FROM insert1";
                SqlDataAdapter da = new SqlDataAdapter(sql, cn);
                dt = new DataTable();
                da.Fill(dt);
                tr = dt.Rows.Count - 1;
                rp = 0; // Start at the first record
                if (tr >= 0)
                    Navigate();
            }
            public void Navigate()
            {
                if (dt != null && dt.Rows.Count > 0)
                {
                    Name = dt.Rows[rp][1].ToString();
                    Number = dt.Rows[rp][2].ToString();
                    id = Convert.ToInt32(dt.Rows[rp]["id"]);
                }
            }
            public void FirstRecord()
            {
                rp = 0;
                Navigate();
            }
            public void NextRecord()
            {
                if (rp < tr)
                {
                    rp++;
                    Navigate();
                }
            }
            public void PreviousRecord()
            {
                if (rp > 0)
                {
                    rp--;
                    Navigate();
                }
            }
            public void LastRecord()
            {
                rp = tr;
                Navigate();
            }
        }
    }
}
